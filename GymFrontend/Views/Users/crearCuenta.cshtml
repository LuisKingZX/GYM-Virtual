@model DTO.Dtos.User
<div id="creteUserRootWrapper" class="create-user-root-wrapper">
    <div id="bgImageContainer" class="bg-split-image-container">
    </div>
    <div class="split-form-container">
        <div class="form-container">
            <p class="title">Inscribete</p>
            <form class="form" method="post" action="signUp">
                <span id="validationSummary" class="validation-error">@ViewBag.message</span>
                <div class="input-group">
                    <label  for="username">Nombre completo</label>
                    <input asp-for="@Model.NombreCompleto" type="text" name="nombreCompleto" id="username" placeholder="">
                    <span asp-validation-for="@Model.NombreCompleto" class="validation-error"></span>
                </div>
                <div class="input-group">
                    <label for="apellido">Apellido</label>
                    <input asp-for="@Model.Apellido" type="text" name="apellido" id="username" placeholder="">
                    <span asp-validation-for="@Model.Apellido" class="validation-error"></span>
                </div>
                <div class="input-group">
                    <label for="fechaDeNacimiento">Fecha de nacimiento</label>
                    <input asp-for="@Model.FechaDeNacimiento" type="date" name="fechaDeNacimiento" id="fechaDeNacimiento">
                    <span asp-validation-for="@Model.FechaDeNacimiento" class="validation-error"></span>
                </div>
                <div class="input-group">
                    <label for="direccion">Direccion</label>
                    <input asp-for="@Model.Direccion" type="text" name="direccion" id="direccion" placeholder="">
                    <span asp-validation-for="@Model.Direccion" class="validation-error"></span>
                </div>
                <div class="input-group">
                    <label for="username">N° Identificacion</label>
                    <input asp-for="@Model.NumeroDeIdentificacion" type="text" name="numeroDeIdentificacion" id="username" placeholder="">
                    <span asp-validation-for="@Model.NumeroDeIdentificacion" class="validation-error"></span>
                </div>
                <div class="input-group">
                    <label for="username">Correo electronico</label>
                    <input asp-for="@Model.Correo" type="email" name="correo" id="username" placeholder="">
                    <span asp-validation-for="@Model.Correo" class="validation-error"></span>
                </div>
                <div class="input-group">
                    <label for="username">Telefono</label>
                    <input asp-for="@Model.Telefono" type="tel" name="telefono" id="username" placeholder="">
                    <span asp-validation-for="@Model.Telefono" class="validation-error"></span>
                </div>
                <div class="input-group">
                    <label for="password">Contraseña</label>
                    <input asp-for="@Model.Contrasena" type="password" name="contrasena" id="password" placeholder="">
                    <span asp-validation-for="@Model.Contrasena" class="validation-error"></span>

                </div>
                <div class="input-group">
                    <label for="password">Confirma tu contraseña</label>
                    <input asp-for="@Model.ContrasenaConfirmacion" type="password" name="ContrasenaConfirmacion" id="confirmarContrasena" placeholder="">
                    <span asp-validation-for="@Model.ContrasenaConfirmacion" class="validation-error"></span>

                </div>

                <button class="sign fix-margin-button-crear-cuenta">Crear cuenta</button>


            </form>
            <p class="signup">
                ¿Ya tienes cuenta?
                <a rel="noopener noreferrer" asp-area="" asp-controller="Users" asp-action="Index">Iniciar Sesion</a>
            </p>
        </div>
    </div>

</div>